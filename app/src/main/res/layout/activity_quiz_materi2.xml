<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        tools:context=".materi1.QuizMateri1Activity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_red_ligth"
            android:paddingVertical="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="0"
                android:textColor="@color/red"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/red"
                android:text="/"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/red"
                android:text="100"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAlignment="center"
            tools:text="Pertanyaan"
            android:background="@drawable/bg_primary_ligth"
            android:fontFamily="@font/poppins_regular"
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:id="@+id/tv_question"/>

        <ImageView
            android:id="@+id/iv_question"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="16dp"
            android:layout_gravity="center"
            android:src="@drawable/gaun_soal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:background="@drawable/bg_primary_grad"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choisissez la bonne rÃ©ponse!"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Pilihlah jawaban yang tepat!)"
                android:textColor="@color/merah_2"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CFDCFF"
                android:layout_marginVertical="4dp"
                app:cardCornerRadius="20dp">
                <Button
                    android:id="@+id/btn_answer_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4D668C"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="A"
                    android:background="@color/primary_light"
                    android:paddingVertical="16dp"
                    android:textAllCaps="false"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CFDCFF"
                android:layout_marginVertical="4dp"
                app:cardCornerRadius="20dp">
                <Button
                    android:id="@+id/btn_answer_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4D668C"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="b"
                    android:background="@color/primary_light"
                    android:paddingVertical="16dp"
                    android:textAllCaps="false"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CFDCFF"
                android:layout_marginVertical="4dp"
                app:cardCornerRadius="20dp">
                <Button
                    android:id="@+id/btn_answer_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4D668C"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="c"
                    android:paddingVertical="16dp"
                    android:background="@color/primary_light"
                    android:textAllCaps="false"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </LinearLayout>
</ScrollView>